 import requests
 from bs4 import BeautifulSoup
 import pandas as pd


 HEADERS = ({'User-Agent':
            'Mozilla/5.0 (Windows NT 10.0; Win64; x64) \
            AppleWebKit/537.36 (KHTML, like Gecko) \
            Chrome/90.0.4430.212 Safari/537.36',
            'Accept-Language': 'en-US, en;q=0.5'})


 # Scrape the data
 def getdata(site_url):
    res = requests.get(site_url, headers=HEADERS)
    return res.text

 def gethtml(site_url):
    data = getdata(site_url)
    soup = BeautifulSoup(data, 'html.parser')
    return soup

 site_url = "https://www.amazon.in/Lenovo-IdeaPad-i5-12450H-Warranty-83EQ005VIN/dp/B0D6MPVN7B/ref=srd_d_vsims_d_sccl_5_7/262-9593109-3113"

 soup = gethtml(site_url)

 def getCustomerName(soup):
    custumer_list = [item.get_text() for item in soup.find_all("span", class_="a-profile-name")]
    return custumer_list

 def getRating(soup):
    rating_list = [item.get_text() for item in soup.find_all("span", class_="a-icon-alt")]
    return rating_list

 def getReviewDate(soup):
    date_list = [item.get_text() for item in soup.find_all("span", class_="review-date")]
    return date_list

 custumer_res = getCustomerName(soup)
 rating = getRating(soup)
 date = getReviewDate(soup)

 # Ensure all lists have the same length by taking the minimum length
 min_len = min(len(custumer_res), len(rating), len(date))
 custumer_res = custumer_res[:min_len]
 rating = rating[:min_len]
 date = date[:min_len]

 # Create a Pandas DataFrame
 df = pd.DataFrame({
    'Customer Name': custumer_res,
    'Rating': rating,
    'Review Date': date
 })
 # Display the DataFrame as a Google Colab table
 df
