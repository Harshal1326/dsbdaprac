import pandas as pd
df = pd.read_csv('dataset_Facebook.csv',sep=';')
df
df.columns

sub1 = df[['Type','Category']]
sub1

sub2 = df[['Category','like',]]
sub2

merge_data = pd.merge(sub1, sub2 , ) # Changed left_on to 'like' and right_on to 'comment'
merge_data

sort_values = merge_data.sort_values('like', ascending=False) # Changed data to merge_data
sort_values

merge_data.transpose()

import pandas as pd
# reshape the dataframe using melt
reshaped_df = pd.melt(df, id_vars=['Type', 'Category'], value_vars=['like', 'share', 'comment'])
reshaped_df
